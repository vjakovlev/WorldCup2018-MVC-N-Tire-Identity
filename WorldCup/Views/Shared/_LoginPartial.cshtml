@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">

            @if (this.User.IsInRole("Admin"))
            {
                <li class="nav-item dropdown" style="display: flex;">
                    <a id="navbarDropdown" class="nav-link adminHover" href="#" title="Manage" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Admin Panel
                        <img src="~/Images/arrow2.png" class="navbarArrow"/>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("Manage Roles", "Index", "Role", null, htmlAttributes: new { @class = "dropdown-item" })
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Positions", "Index", "Positions", null, htmlAttributes: new { @class = "dropdown-item" })
                        @Html.ActionLink("Continents", "Index", "Continents", null, htmlAttributes: new { @class = "dropdown-item" })
                    </div>
                </li>
            }
            else
            {
            }

            <li class="nav-item dropdown" style="display: flex;">
                <a id="navbarDropdown" class="nav-link adminHover" href="#" title="Manage" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @User.Identity.GetUserName()
                    <img src="~/Images/arrow2.png" class="navbarArrow" />
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    @Html.ActionLink("Account Settings", "Index", "Manage", null, htmlAttributes: new { @class = "dropdown-item" })
                    <div class="dropdown-divider"></div>
                    @Html.ActionLink("Change Password", "ChangePassword", "Manage", null, htmlAttributes: new { @class = "dropdown-item" })
                    @Html.ActionLink("Add Phone", "AddPhoneNumber", "Manage", null, htmlAttributes: new { @class = "dropdown-item" })
                    @Html.ActionLink("External Logins", "ManageLogins", "Manage", null, htmlAttributes: new { @class = "dropdown-item" })
                    <div class="dropdown-divider"></div>
                    <a href="javascript:document.getElementById('logoutForm').submit()" class="dropdown-item">Log off</a>
                </div>
            </li>

        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link navForHover" })
        </li>
        <li>
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link navForHover" })
        </li>
    </ul>
}










