                @Html.DropDownListFor(model => model.ViewTeamBId, new SelectList((List<TeamViewModel>)ViewBag.B, "Id", "Name"), "Select Team", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ViewTeamBId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
